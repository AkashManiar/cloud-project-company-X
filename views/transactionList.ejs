<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<style>
    table, th, td{
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<body>
    <div class="container">
        <form action="/">
            <button type= "submit" class="btn btn-info">Go to main page</button>
        </form>
        <br>
        <h3>Transactions done using this bank's account:</h3>
    <br>
    <% if(message != '') { %>
        <% if (success) {%>
            <div class="alert alert-success">
                <%= message %>
            </div>
        <% } else {%>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>
    <% }%>
    <% if(typeof transactions != 'undefined'){ %>
        <% if(transactions.length === 0){ %>
            <div class="alert alert-warning" role="alert">
                There are no Transaction records for any account.
            </div>
        <% } else {%>
            <row>
                <col>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Transaction Number</th>
                                <th>Account Number</th>
                                <th>Vendor Name</th>
                                <th>Amount</th>
                                <th>Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(function(transaction){ %>
                                <tr>
                                    <td> <%= transaction.transaction_id %> </td>
                                    <td> <%= transaction.account_no %> </td>
                                    <td> <%= transaction.vendor_name %> </td>
                                    <td> <%= transaction.amount %> </td>
                                    <td> 
                                        <form class="d-inline" action="/deleteTransaction/<%= transaction.transaction_id %>">
                                            <input type="submit" value="Delete" class="btn btn-danger">
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </col>
            </row>
        <% }%>
    <% } %>
</body>
</div>
    